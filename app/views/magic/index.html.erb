<div class="row">
	<div class="col-md-12">
		<%= form_tag magic_path do %>
			<%= text_field_tag :name, nil, placeholder: "Name", class: "center-block"%>
			<%#= select_tag :state, options_for_select(@states), prompt: "Please select" %>
			<%= submit_tag "Search Cards", class: "btn btn-primary", class: "center-block"%>
		<%end%>
	</div>
</div>

<div class="row">
	<% @all_cards.each do |card| %>
		<div class="col-sm-6 col-md-3 col-lg-3">
			<div class="thumbnail">
				<% if card[1].present? %>
					<img src="<%=card[1]%>" class="card">
				<% else %>
					<img src="/assets/mtg_back.jpg" class="card">
				<%end%>
				<div class="caption">
					<h3 class="center"><%=card[0]%></h3>
					<p class="center"><%=card[2]%></p>
					<!-- <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p> -->
				</div>
			</div>
		</div>
	<%end%>
</div>