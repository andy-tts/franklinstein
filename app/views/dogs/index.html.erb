<p id="notice"><%= notice %></p>



<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Weight</th>
      <th>Health Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.user.try(:first_name) %></td>
        <td><%= dog.name %></td>
        <td><%= dog.age %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.weight %></td>
        <td> Health Status</td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

