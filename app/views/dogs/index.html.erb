<p id="notice"><%= notice %></p>


<h2><%= @current_user.first_name %>'s Dogs</h2>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Weight</th>
      <!-- <th>Owner</th> -->
      <th>Health Status</th>
      <th>Recipes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.age %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.weight %></td>
        <!-- <td><%= dog.user.first_name %></td> -->
        <td><%= dog.health_status %></td>
        <td><%= link_to 'Recipes', recipes_url %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

