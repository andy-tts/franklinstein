<p id="notice"><%= notice %></p>


<h2><%= @current_user.first_name %>'s Dogs</h2>


<div class="row">
  <div class="col-xs-3 col-sm-3 col-md-6 col-lg-10">
    <table class="table">
      <thead>
        <tr>
          <th>Avatar</th>
          <th>Name</th>
          <th>Age</th>
          <th>Breed</th>
          <th>Weight</th>
        <!-- <th>Owner</th> -->
          <th>Health Status</th>
          <th>Recipes</th>
          <th colspan="3"></th>
        </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>   
    <tr>
        <td><% if dog.avatar.present? %>
              <%= image_tag dog.avatar.url, size: "100" %>
            <% end %></td>
        <td><%= dog.name %></td>
        <td><%= dog.age %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.weight %></td>
        <!-- <td><%= dog.user.first_name %></td> -->
        <td><%= dog.health_status %></td>
        <td><%= link_to 'Custom Recipes', custom_recipes_path(dog_id: dog.id) %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>



