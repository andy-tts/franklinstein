<html>
  <head>
   
  </head>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
<h1>Ingredients</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-3 col-sm-3 col-md-6 col-lg-10">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Carbohydrates</th>
      <th>Protein</th>
      <th>Fat</th>
      <th>Kcal</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.cho %></td>
        <td><%= ingredient.pro %></td>
        <td><%= ingredient.fat %></td>
        <td><%= ingredient.kcal %></td>
        <td><%= ingredient.category %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<%= link_to 'New Ingredient', new_ingredient_path %>
</html>